@model IEnumerable<BulkyBookWeb.Models.Category>
<partial name="_Notification"/>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add new category
            </a>
        </div>
    </div>
</div>
<div class="row pt-4 pb-3">
<div class="col-12">
        <form asp-controller="Category" asp-action="Index" method="get">
        <span>
            Title: <input class="form-control" type="text" name="SearchString" />
            <input class="btn btn-outline-secondary" type="submit" value="Filter" />
        </span>
    </form>
</div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">Category Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentFilter"]">Display Order</a>
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach(var obj in Model)
            {
            <tr>

                <td>
                    @obj.Name
                </td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2">Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
            }
    </tbody>
</table>