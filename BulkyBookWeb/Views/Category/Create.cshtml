@model Category
<div class="row">
    <div class="col-md-3"></div> 
    <div class="col-md-6">
<form method="post">
            <div class="border-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Create category</h2>
                    <hr/>
                </div>
                <div class="mb-3">
                    <label asp-for="Name">Category name</label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="p-0">Display order</label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input value="Add" type="submit" class="btn btn-primary"/>
                </div>
            </div>
</form>
    </div>
<div class="col-md-3"></div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

